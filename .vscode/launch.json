            "stopAtEntry": false,
            "requireExactSource": false
        },
        {
            "name": "Launch Retirement Console (External Terminal)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-console",
            "program": "${workspaceFolder}/RetirementPlanner.Console/bin/Debug/net8.0/RetirementPlanner.Console.dll",
            "args": [],
            "cwd": "${workspaceFolder}/RetirementPlanner.Console",
            "console": "externalTerminal",
            "stopAtEntry": false,
            "requireExactSource": false
        },
        {
            "name": "Run Console Project (Integrated Terminal)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-console",
            "program": "${workspaceFolder}/RetirementPlanner.Console/bin/Debug/net8.0/RetirementPlanner.Console.dll",
            "args": [],
            "cwd": "${workspaceFolder}/RetirementPlanner.Console",
            "console": "integratedTerminal",
            "stopAtEntry": false,
